{
    "name": "pixelunion/pxu-php-format",
    "description": "Linters and formatters for Pixel Union's Laravel projects.",
    "require": {
        "squizlabs/php_codesniffer": "^3.2"
    },
    "bin": [
        "bin/php-validate",
        "bin/php-format"
    ],
    "scripts": {
      "test": "./vendor/bin/phpunit --bootstrap ./PixelUnion/Tests/bootstrap.php ./PixelUnion/Tests/AllSniffs.php"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    }
}
